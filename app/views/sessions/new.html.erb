<%= form_tag session_path do %>
  <fieldset>
    <legend>Log in here</legend>

    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag 'Log in' %>


  </fieldset>
  <%= hidden_field_tag 'target_page', @target_page %>
<% end %>